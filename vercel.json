{
  "version": 2,
  "builds": [
    {
      "src": "digital-scoreboard/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": { "distDir": "staticfiles_build" }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "digital-scoreboard/wsgi.py"
    }
  ],
  "outputDirectory": "staticfiles"
}